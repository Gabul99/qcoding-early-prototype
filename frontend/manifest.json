{
  "manifest_version": 3,
  "name": "Thematic Agents Prototype",
  "version": "0.0.1",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:8000/*", "https://localhost:8000/*"],
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*"],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ]
}
